@model IEnumerable<Item>



<div class="container p-3">

    <div class="row pt-4">

        <div class="col-6">

            <h2 class="text-primary">Uitgeleende items</h2>

        </div>

        <div class="col-6">

            Nieuw item aanmaken

        </div>

    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item naam</th>
                    <th>Geleend door</th>
                    <th>Uitgeleend door</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%"></td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert-danger">Geen items uitgeleend</p>
    }

</div> 